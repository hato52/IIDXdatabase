<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_data_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.souta.iidxdatabase.DataViewActivity">

    <TextView
        android:text="シリーズ : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/series" />

    <TextView
        android:text="---"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seriesText"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/series"
        android:layout_toEndOf="@+id/series" />

    <TextView
        android:text="タイトル : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/series"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/title" />

    <TextView
        android:text="---"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleText"
        android:layout_alignBaseline="@+id/title"
        android:layout_alignBottom="@+id/title"
        android:layout_toRightOf="@+id/title"
        android:layout_toEndOf="@+id/title" />

    <TextView
        android:text="ジャンル : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/genre" />

    <TextView
        android:text="---"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/genreText"
        android:layout_alignBaseline="@+id/genre"
        android:layout_alignBottom="@+id/genre"
        android:layout_toRightOf="@+id/genre"
        android:layout_toEndOf="@+id/genre" />

    <TextView
        android:text="アーティスト : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/genre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/artist" />

    <TextView
        android:text="---"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artistText"
        android:layout_alignBaseline="@+id/artist"
        android:layout_alignBottom="@+id/artist"
        android:layout_toRightOf="@+id/artist"
        android:layout_toEndOf="@+id/artist" />

    <ImageView
        android:id="@+id/divide1"
        android:src="@android:drawable/divider_horizontal_bright"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/artist" />

    <TextView
        android:text="---"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/mode" />

    <TextView
        android:text="---"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mode"
        android:layout_alignBottom="@+id/mode"
        android:layout_toRightOf="@+id/mode"
        android:layout_marginLeft="10dp"
        android:id="@+id/diffRank" />

    <TextView
        android:text=" : ☆"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diff"
        android:layout_alignBaseline="@+id/diffRank"
        android:layout_alignBottom="@+id/diffRank"
        android:layout_toRightOf="@+id/diffRank"
        android:layout_toEndOf="@+id/diffRank" />

    <TextView
        android:text="---"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/diff"
        android:layout_alignBottom="@+id/diff"
        android:layout_toRightOf="@+id/diff"
        android:id="@+id/difficulty" />

    <TextView
        android:text="CLEAR TYPE : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diffRank"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/clearType" />

    <TextView
        android:text="---"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/clearType"
        android:layout_alignBottom="@+id/clearType"
        android:layout_toRightOf="@+id/clearType"
        android:id="@+id/clearTypeText" />

    <TextView
        android:text="DJ LEVEL : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clearType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/djLevel" />

    <TextView
        android:text="---"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/djLevel"
        android:layout_alignBottom="@+id/djLevel"
        android:layout_toRightOf="@+id/djLevel"
        android:id="@+id/djLevelText" />

    <ImageView
        android:id="@+id/divide2"
        android:src="@android:drawable/divider_horizontal_bright"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/djLevel" />

    <TextView
        android:text="EXSCORE : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/exScore" />

    <TextView
        android:text="---"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/exScore"
        android:layout_alignBottom="@+id/exScore"
        android:layout_toRightOf="@+id/exScore"
        android:id="@+id/exScoreText" />

    <TextView
        android:text="PGREAT : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exScore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/pGreat" />

    <TextView
        android:text="---"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exScore"
        android:layout_alignBaseline="@+id/pGreat"
        android:layout_alignBottom="@+id/pGreat"
        android:layout_toRightOf="@+id/pGreat"
        android:id="@+id/pGreatText" />

    <TextView
        android:text="GREAT : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@+id/pGreat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/great" />

    <TextView
        android:text="---"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pGreat"
        android:layout_alignBaseline="@+id/great"
        android:layout_alignBottom="@+id/great"
        android:layout_toRightOf="@+id/great"
        android:id="@+id/greatText" />

    <TextView
        android:text="MISS COUNT : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/great"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/miss" />

    <TextView
        android:text="---"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/miss"
        android:layout_alignBottom="@+id/miss"
        android:layout_toRightOf="@+id/miss"
        android:id="@+id/missText" />

    <ImageView
        android:id="@+id/divide3"
        android:src="@android:drawable/divider_horizontal_bright"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/miss" />

    <TextView
        android:text="総合プレー回数 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/playNum" />

    <TextView
        android:text="---"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/playNum"
        android:layout_alignBottom="@+id/playNum"
        android:layout_toRightOf="@+id/playNum"
        android:id="@+id/playNumText" />

    <TextView
        android:text="最終プレー日時 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playNum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/playDate" />

    <TextView
        android:text="---"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/playDate"
        android:layout_alignBottom="@+id/playDate"
        android:layout_toRightOf="@+id/playDate"
        android:id="@+id/playDateText" />

</RelativeLayout>

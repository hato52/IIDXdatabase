<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_data_appdate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.souta.iidxdatabase.DataAppdateActivity">

    <TextView
        android:text="タイトル: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/change_title" />

    <TextView
        android:text="---"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignBaseline="@+id/change_title"
        android:layout_alignBottom="@+id/change_title"
        android:layout_toRightOf="@+id/change_title"
        android:layout_toEndOf="@+id/change_title"
        android:id="@+id/change_titleText" />

    <TextView
        android:text="---"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/change_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/change_mode" />

    <TextView
        android:text="---"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@+id/change_mode"
        android:layout_alignBottom="@+id/change_mode"
        android:layout_toRightOf="@+id/change_mode"
        android:layout_toEndOf="@+id/change_mode"
        android:id="@+id/change_diff" />

    <TextView
        android:text=" : ☆"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/change_diff"
        android:layout_alignBottom="@+id/change_diff"
        android:layout_toRightOf="@+id/change_diff"
        android:layout_toEndOf="@+id/change_diff"
        android:id="@+id/change_text1" />
    <TextView
        android:text="---"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/change_text1"
        android:layout_alignBottom="@+id/change_text1"
        android:layout_toRightOf="@+id/change_text1"
        android:layout_toEndOf="@+id/change_text1"
        android:id="@+id/change_diffRank" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_clearType"
        android:layout_below="@+id/change_clear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:entries="@array/clear_type"/>


    <Button
        android:text="更新"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/appdate_button" />

    <Button
        android:text="戻る"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/back_button" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_djLevel"
        android:entries="@array/dj_level"
        android:layout_below="@+id/change_djlevel"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/change_divide"
        android:src="@android:drawable/divider_horizontal_bright"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/change_diff"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="クリアタイプ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/change_clear"
        android:layout_below="@+id/change_divide"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <TextView
        android:text="DJレベル"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/change_djlevel"
        android:layout_below="@+id/spinner_clearType"
        android:layout_alignParentStart="true" />

</RelativeLayout>

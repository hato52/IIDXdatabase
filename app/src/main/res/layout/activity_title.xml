<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.souta.iidxdatabase.TitleActivity">

    <!-- <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@color/gray"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" /> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mode_button"
        android:layout_above="@+id/set_button"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp" >

        <Button
            android:text="SP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_sp"
            android:layout_weight="1" />

        <Button
            android:text="DP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/set_button"
        android:layout_above="@+id/select_license"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="40dp" >

        <Button
            android:text="SPデータ登録"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_setdata"
            android:layout_weight="1" />

        <Button
            android:text="DPデータ登録"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_setdata2"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:text="IIDXdatabase"
        android:textSize="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="ライセンス"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_license"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/icon_v2"
        android:id="@+id/imageView2"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sub"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.souta.iidxdatabase.SubActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs_sub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="5dp"
        app:tabTextColor="#E8EAF6"
        app:tabSelectedTextColor="#E8EAF6"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_sub"
        android:layout_below="@+id/tabs_sub"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

